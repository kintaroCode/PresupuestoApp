@model TiposCuenta;

@{
    ViewData["Title"]="Crear Tipo de Cuenta";
}

<h1>Crear Tipos de Cuenta</h1>
<h5>Agregar El tipo de Cuenta de como se gasta </h5>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>



    <form asp-action="Crear" asp-controller="TiposCuenta">
        <div class="mb-3">
            <label asp-for="Nombre" class="form-label"></label>
            <input asp-for="Nombre" type="text" id="Nombre" class="form-control"/>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </form>


@section Scripts{
    <partial name="_ValidationScriptsPartial"></partial>
}